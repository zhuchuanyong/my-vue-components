{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*",
      ],
      "@style/*": [
        "src/style/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@UseHooksAnimation/*": [
        "src/views/UseHooks/components/animation/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/views/UseHooks/components/animation/useTimeoutFn.tsx",
    "src/views/UseHooks/components/animation/useTimeoutFn2.jsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
